group("flutter") {
  testonly = true

  deps = [
    "//flutter/assets",
    "//flutter/flow",
    "//flutter/glue",
    "//flutter/snapshotter",
  ]

  if (!is_fuchsia) {
    deps += [
      "//flutter/sky",
    ]
  }

  if (is_ios) {
    deps += [
      "//flutter/services/dynamic:sdk_lib_archive",
      "//flutter/sky/shell:flutter_framework",
    ]
  }
}

if (!is_fuchsia) {

  group("dist") {
    testonly = true

    deps = [
      "//flutter/sky/dist",
    ]
  }

}
